{
    "defaultSeverity": "error",
    "extends": "tslint:recommended",
    "jsRules": {},
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "interface-name": [true, "never-prefix"],
        "no-console": false,
        "object-literal-sort-keys": false,
        "quotemark": {
            "options": ["single", "avoid-escape"]
        },
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never"
                },
              "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
